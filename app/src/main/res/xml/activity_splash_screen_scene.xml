<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@+id/end"
        motion:motionInterpolator="easeOut"
        motion:duration="1500">
       <KeyFrameSet>
        <KeyAttribute
            motion:motionTarget="@+id/imageView_curtain"
            android:translationX="50dp" />
        <KeyAttribute
            motion:motionTarget="@+id/name"
            android:alpha="0"
            android:translationX="-50dp" />
        <KeyAttribute
            motion:motionTarget="@+id/imageView_curtain"
            motion:framePosition="0"
            android:alpha="0" />
        <KeyAttribute
            motion:motionTarget="@+id/imageView_curtain"
            motion:framePosition="30"
            android:alpha="1" />
        <KeyAttribute
            motion:motionTarget="@+id/logo"
            motion:framePosition="50"
            android:alpha="0" />
        <KeyAttribute
            motion:motionTarget="@+id/name"
            motion:framePosition="100"
            android:alpha="1" />
        <KeyAttribute
            motion:motionTarget="@+id/logo"
            motion:framePosition="100"
            android:alpha="0" />
       </KeyFrameSet>

        <OnClick motion:targetId="@+id/logo" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:transitionEasing="linear" />
        <Constraint
            android:id="@+id/name"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@id/logo" />
        <Constraint
            android:id="@+id/imageView_curtain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/name"
            motion:layout_constraintTop_toTopOf="@id/name"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintHorizontal_bias="1.0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/imageView_curtain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/name"
            motion:layout_constraintStart_toEndOf="@id/name"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/name" />
        <Constraint
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>